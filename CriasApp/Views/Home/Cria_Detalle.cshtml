@model CriasApp.Models.ViewModels.CriaViewModel
@{
    ViewData["Title"] = "Cria_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oCria.Id == 0)
{
    <h1>Crear Cria</h1>
}
else
{
    <h1>Editar Cria</h1>
}


<div class="row">
    <div class="col-sm-4">
        <form asp-action="Cria_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oCria.Id" />

            <div class="mb-2">
                <label class="form-label" asp-for=oCria.Nombre>Nombre de la cria</label>
                <input class="form-control form-control-sm" asp-for="oCria.Nombre" type="text"/>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for=oCria.Peso>Peso</label>
                <input class="form-control form-control-sm" asp-for="oCria.Peso" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for=oCria.Costo>Costo</label>
                <input class="form-control form-control-sm" asp-for="oCria.Costo" type="text" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for=oCria.IdProveedor>Proveedor</label>
                <select class="form-select form-select-sm" asp-for="oCria.IdProveedor" asp-items="@Model.oListaProveedor">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
            </div>

            <label>
                @Html.CheckBox("oCria.Estado", false)
                Poner en cuarentena
            </label>

            <div class="mb-2">
                @if (Model.oCria.Id == 0)
                {
                    <button class="btn btn-primary  w-25" type="submit">Crear</button>
                }else
                {
                    <button class="btn btn-primary  w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark w-25 m-4" asp-action="Index" asp-controller="Home">Volver</a>
            </div>

           

        </form>

    </div>
</div>

